{
  "name": "feijoa-ui-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "site"
  ],
  "scripts": {
    "dev": "cd ./site && bun run dev",
    "build": "turbo run build",
    "build:site": "turbo run build --filter feijoa-ui-site",
    "build:lib": "turbo run build --filter feijoa-ui",
    "build:cli": "turbo run build --filter @feijoa-ui/cli",
    "pub": "cd ./packages/feijoa-ui && bun run pub"
  },
  "devDependencies": {
    "turbo": "^1.10.15"
  }
}
